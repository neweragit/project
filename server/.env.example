# PDF Watermark Server Configuration
# Copy this file to .env in the server directory and fill in your values

# Supabase Configuration (required)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Server Configuration
PORT=3002

# CORS Configuration (optional - defaults to allow all origins in development)
CORS_ORIGIN=http://localhost:5173

# Security Configuration (optional)
# JWT_SECRET=your-jwt-secret-for-additional-security

# Watermark Configuration (optional)
WATERMARK_OPACITY=0.3
WATERMARK_FONT_SIZE=20
WATERMARK_ROTATION=-45

# Logging Configuration (optional)
LOG_LEVEL=info
LOG_DOWNLOADS=true